<!-- views/productList.ejs -->

<html>
<head>
  <title>Product List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }

    h1 {
      text-align: center;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    tr:hover {
      background-color: #f5f5f5;
    }

    ul {
      padding: 0;
      margin: 0;
      list-style-type: none;
    }

    li {
      margin-bottom: 5px;
    }
  </style>
</head>
<body>
  <h1>Product List order by user</h1>
  <table>
    <tr>
      <th>Username</th>
      <th>Items No</th>
      <th>Items IDs</th>
      <th>Items Names</th>
      <th>Total Price</th>
     

     
      <th>Total Discount</th>
      <th>Total Discount Price</th>
      <th>status</th>
     
    
    </tr>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.username %></td>
        <td><%= product.itemsno %></td>
        <td>
            <ul>
              <% product.itemsids.forEach(item => { %>
                <li><%= item %></li>
              <% }); %>
            </ul>
          </td>
          <td>
            <ul>
              <% product.itemsnames.forEach(item => { %>
                <li><%= item %></li>
              <% }); %>
            </ul>
          </td>
        <td><%= product.totalprice %></td>
        
        <td><%= product.totaldiscount %></td>
        
        <td><%= product.totaldiscountprice %></td>
        <td style="color: green;"> ORDER PLACED</td>
        
       
      </tr>
    <% }); %>
  </table>
</body>
</html>
